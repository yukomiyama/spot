<div class="tags-show-wrapper">
  <div class="container">
    <div class="col-md-12">
      <div class="row">
        <div class="article-wrapper">
          <div class="form-group">
            <h1 class="text-gray"><%= @tag.name %></h1>
          </div>
          <% @articles.each do |article| %>
            <%= link_to user_article_path(id: article.id, user_id: article.user_id) do %>
              <div class="form-group">
                <%= article.title %>
              </div>
            <% end %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
