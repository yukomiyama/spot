<div class="users-show-wrapper">
  <div class="container">
    <div class="row">
      <div class="col-md-3 user-prolife-wrapper">
        <div class="form-group">
          <%= image_tag @user.img.url, class: 'user-img' if @user.img? %>
          <%= @user.name %>
        </div>
        <div class="form-group">
          <% if @user == current_user %>
            <%= link_to 'edit', edit_user_path(@user.id) %>
            <%= link_to 'destroy', user_path(@user.id), method: :delete %>
          <% end %>
        </div>
        <div class="stats">
          <%= render 'shared/stats' %>
        </div>
        <div class="form-group">
          <%= render "follow_form" if logged_in? %>
        </div>
      </div>
      <div class="col-md-9">
        <div class="article-wrapper">
          <h1 class="spot-title text-gray"><%= @user.myspot_name %></h1>
          <div class="col-md-6">
            <% @user.articles.each do |article| %>
              <%= link_to user_article_path(id: article.id, user_id: @user.id) do %>
                <div class="form-group">
                  <%= article.title %>
                </div>
              <% end %>
            <% end %>
          </div>
          <div class="col-md-offset-2 col-md-4">
            <% @tag_list.each do |tag| %>
              <%= link_to user_tag_path(id: tag.id, user_id: @user.id) do %>
                <ul>
                  <li><%= tag.name %></li>
                </ul>
              <% end %>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
