<div class="users-index-wrapper">
  <div class="container">
    <div class="row">
      <div class="col-md-3">
        <div class="user-prolife-wrapper">
          <%= current_user.name %>
          <form class="form-group">
            <%= link_to 'edit', edit_user_path(current_user .id) %>
          </form>
          <div class="stats">
            <%= render 'shared/stats' %>
          </div>
        </div>
      </div>
      <div class="col-md-9">
        <div class="users-wrapper">
          <h1 class="text-gray">Users</h1>
          <% @users.each do |user| %>
            <div class="form-group">
              <%= link_to user.name, user_path(user.id) %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
